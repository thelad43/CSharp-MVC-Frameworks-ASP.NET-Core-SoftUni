@{
    ViewData["Title"] = "Home";
}

@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole(AdministratorRole))
    {
        <div class="container" style="padding: 20px 30px 0 0">
            <div class="jumbotron" style="background-color: #AFEEEE; text-align: center">
                <h2 style="font-weight: bold">Greetings, Administrator - @User.Identity.Name!</h2>
                <hr style="height: 3px; background-color: darkgrey" />
                <p>
                    <strong style="color: darkgrey">Enjoy your work.</strong>
                </p>
            </div>
        </div>
    }
    else
    {
        <div class="container" style="padding: 20px 30px 0 0">
            <div class="jumbotron" style="background-color: #AFEEEE; text-align: center">
                <h2 style="font-weight: bold">Welcome, @User.Identity.Name!</h2>
                <hr style="height: 3px; background-color: darkgrey" />
                <p>
                    <strong style="color: darkgrey">Eventures wishes you an exciting experience.</strong>
                </p>
            </div>
        </div>
    }

}
else
{
    <div class="container" style="padding: 20px 30px 0 0">
        <div class="jumbotron" style="background-color: #AFEEEE">
            <h2 style="font-weight: bold">Eventures - The best ticket service in the world.</h2>
            <hr style="height: 3px; background-color: black" />
            <p>
                <strong><a asp-area="Identity" asp-page="/Account/Login">Login</a> to start "eventing".</strong>
            </p>
            <p>
                <strong><a asp-area="Identity" asp-page="/Account/Register">Register</a> if you don't have an account.</strong>
            </p>
        </div>
    </div>
}